{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "useDefineForClassFields": true,
        "lib": ["DOM", "ES2016"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020",
        "jsx": "react"
    }
}