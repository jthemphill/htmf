{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "useDefineForClassFields": true,
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2020",
        "jsx": "react"
    }
}